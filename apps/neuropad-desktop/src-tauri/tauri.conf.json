{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NeuroPad",
  "version": "0.1.0",
  "identifier": "com.neuropad.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "NeuroPad",
        "width": 1280,
        "height": 840,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "resources": [
      "../../../services/go-kernel/go-kernel.exe",
      "../../../services/ruby-kernel/ruby_kernel.rb",
      "../../../services/python-kernel/python_kernel.py",
      "../../../services/ruby-portable",
      "../../../services/python-portable"
    ],
    "targets": "nsis",
    "windows": {
      "allowDowngrades": false
    }
  }
}
